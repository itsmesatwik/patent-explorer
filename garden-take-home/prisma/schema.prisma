generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model patents {
  id               String    @id
  country_code     String    @db.Char(2)
  kind_code        String    @db.Char(2)
  title            String?
  abstract         String?
  claims           String?
  claims_xml       String?
  description      String?
  description_xml  String?
  publication_date DateTime? @db.Timestamptz(6)
  filing_date      DateTime? @db.Timestamptz(6)
  grant_date       DateTime? @db.Timestamptz(6)
  priority_date    DateTime? @db.Timestamptz(6)
  inventors        String[]
  assignees        String[]
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
}